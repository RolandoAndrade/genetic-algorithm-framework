{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "allowJs": false,
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@examples/*": [
        "examples/*"
      ],
      "@tests/*": [
        "tests/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
  ]
}